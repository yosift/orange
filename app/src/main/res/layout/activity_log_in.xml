<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log_in">
    <ImageView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/first" />

    <ImageView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/second" />
    <Button
        android:id="@+id/back_btn"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/arro_style"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/arro"
        android:paddingStart="15dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="37dp"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/third" />


    <TextView
        android:id="@+id/text_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-black"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="36.41dp" />


    <LinearLayout
        android:id="@+id/inputs_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_signUp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="31dp"
        android:orientation="vertical">
-

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:text="E-mail"
            android:textColor="#9796A1"

            android:textSize="16dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="324.01dp"
            android:layout_height="50dp"
            android:background="@drawable/border_style"
            android:focusableInTouchMode="true"
            android:paddingStart="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:text="Password"
            android:textColor="#9796A1"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="324.01dp"
            android:layout_height="50dp"
            android:background="@drawable/border_style"
            android:focusableInTouchMode="true"
            android:inputType="textWebPassword"
            android:paddingStart="20dp"
            />


    </LinearLayout>
    <TextView
        android:id="@+id/forgetpass"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textColor="#fe724c"
        android:layout_below="@+id/inputs_container"
        android:layout_marginLeft="130dp"
        android:textSize="14dp"/>

    <Button
        android:id="@+id/log_in_btn"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_below="@+id/forgetpass"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/skip_style"
        android:backgroundTint="#fe724c"
        android:fontFamily="sans-serif-medium"
        android:text="Log in"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log_in_btn"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/Sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="Sign Up"
            android:textColor="#fe724c" />
    </LinearLayout>


    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/line"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-black"
        android:text=" sign in with"
        android:textColor="#5B5B5E"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/socailcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/face_btn"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:background="@drawable/skip_style"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/facebooklogo"
            android:padding="12dp"
            android:text="Facebook"
            android:textAlignment="textEnd"
            android:textColor="#000000" />

        <Button
            android:id="@+id/google_btn"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:layout_below="@+id/line"
            android:layout_marginLeft="14.74dp"
            android:background="@drawable/skip_style"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/googlelogo"
            android:padding="19dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="19dp"
            android:text="Google"
            android:textAlignment="textEnd"
            android:textColor="#000000" />


    </LinearLayout>






</RelativeLayout>