<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_Up">

    <ImageView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/first" />

    <ImageView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/second" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/third" />


    <TextView
        android:id="@+id/text_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="42dp"
        android:fontFamily="sans-serif-black"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="36.41dp" />


    <LinearLayout
        android:id="@+id/inputs_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_signUp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="31dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Full name"
            android:textColor="#9796A1"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/Fullname_SignUp"
            android:layout_width="324.01dp"
            android:layout_height="50dp"
            android:background="@drawable/border_style"
            android:focusableInTouchMode="true"
            android:paddingStart="20dp"

             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:text="E-mail"
            android:textColor="#9796A1"

            android:textSize="16dp" />

        <EditText
            android:id="@+id/Email_SignUp"
            android:layout_width="324.01dp"
            android:layout_height="50dp"
            android:background="@drawable/border_style"
            android:focusableInTouchMode="true"
            android:paddingStart="20dp"

             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:text="Password"
            android:textColor="#9796A1"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/password_SigUp"
            android:layout_width="324.01dp"
            android:layout_height="50dp"
            android:background="@drawable/border_style"
            android:focusableInTouchMode="true"
            android:inputType="textWebPassword"
            android:paddingStart="20dp"
             />


    </LinearLayout>

    <Button
        android:id="@+id/Sign_up_btn"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_below="@+id/inputs_container"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/skip_style"
        android:backgroundTint="#fe724c"
        android:fontFamily="sans-serif-medium"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sign_up_btn"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="login"
            android:textColor="#fe724c" />
    </LinearLayout>


    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/line"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-black"
        android:text=" sign in with"
        android:textColor="#5B5B5E"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/socailcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/face_btn"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:background="@drawable/skip_style"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/facebooklogo"
            android:padding="12dp"
            android:text="Facebook"
            android:textAlignment="textEnd"
            android:textColor="#000000" />

        <Button
            android:id="@+id/google_btn"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:layout_below="@+id/line"
            android:layout_marginLeft="14.74dp"
            android:background="@drawable/skip_style"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/googlelogo"
            android:padding="19dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="19dp"
            android:text="Google"
            android:textAlignment="textEnd"
            android:textColor="#000000" />


    </LinearLayout>


</RelativeLayout>