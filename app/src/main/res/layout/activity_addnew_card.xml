<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addnew_card">


    <LinearLayout

        android:id="@+id/uperbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="26dp"
        >
        <Button
            android:id="@+id/back_btn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/arro_style"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/arro"
            android:paddingStart="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="37dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Card"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="77dp"/>

        <ImageView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scanner"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="50dp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputs_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uperbar"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="31dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="name"
            android:textColor="#9796A1"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/Fullname_SignUp"
            android:layout_width="324.01dp"
            android:layout_height="50dp"
            android:background="@drawable/border_style"
            android:focusableInTouchMode="true"
            android:paddingStart="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:text="Card Number"
            android:textColor="#9796A1"

            android:textSize="16dp" />

        <EditText
            android:id="@+id/Email_SignUp"
            android:layout_width="324.01dp"
            android:layout_height="50dp"
            android:background="@drawable/border_style"
            android:focusableInTouchMode="true"
            android:paddingStart="20dp"
            android:drawableEnd="@drawable/crid_logo"
            android:paddingEnd="20dp"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:text="Expires "
                    android:textColor="#9796A1"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/password_SigUp"
                    android:layout_width="152dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_style"
                    android:focusableInTouchMode="true"
                    android:inputType="textWebPassword"
                    android:paddingStart="20dp"
                    />


            </LinearLayout>










            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:text="CVV"
                    android:textColor="#9796A1"
                    android:textSize="16dp" />

                <EditText

                    android:layout_width="152dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_style"
                    android:focusableInTouchMode="true"
                    android:inputType="textWebPassword"
                    android:paddingStart="20dp"
                    />


            </LinearLayout>





        </LinearLayout>

<TextView
    android:layout_marginTop="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableStart="@drawable/correct"
    android:drawablePadding="20dp"
    android:text="Securely save card and details"/>



    </LinearLayout>
    <Button
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputs_container"
        android:text="Confirm Order"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:background="@drawable/checkout_style"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp"
        />

</RelativeLayout>