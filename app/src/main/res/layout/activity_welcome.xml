<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shadow"
        android:scaleType="centerCrop"/>
    <Button
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="#FE724C"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="292.5dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/skip_style"/>

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="311dp"
        android:layout_height="111dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="181dp"
        android:src="@drawable/welcome"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="19dp"
        android:singleLine="false"
        android:text="Your favourite foods delivered \n fast at your door."
        android:textColor="#30384F"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_marginTop="495dp"
        android:layout_marginLeft="44dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" sign in with"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="150dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="sans-serif-black"/>



    <LinearLayout
        android:id="@+id/socailcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/line"
        >
        <Button
            android:id="@+id/face_btn"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:background="@drawable/skip_style"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/facebooklogo"
            android:padding="12dp"
            android:text="Facebook"
            android:textAlignment="textEnd"
            android:textColor="#000000" />

        <Button
            android:id="@+id/google_btn"
            android:layout_width="139.26dp"
            android:layout_height="54dp"
            android:layout_below="@+id/line"
            android:layout_marginLeft="14.74dp"
            android:background="@drawable/skip_style"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/googlelogo"
            android:padding="19dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="19dp"
            android:text="Google"
            android:textAlignment="textEnd"
            android:textColor="#000000" />


    </LinearLayout>

    <Button
        android:id="@+id/email_and_phone"
        android:layout_width="293dp"
        android:layout_height="54dp"
        android:layout_below="@+id/socailcontainer"
        android:layout_marginLeft="44dp"
        android:background="@drawable/email_and_phone_style"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#A0A1AA"
        android:text="Start with email or phone"
        android:layout_marginTop="23dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/email_and_phone"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="28dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>






</RelativeLayout>